# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Delivery Endpoint
DELIVER_ENDPOINT=http://localhost:8000/deliver_processed

# Processing Configuration
BATCH_SIZE=10

# Mock Mode Configuration
USE_MOCK_DB=true        # true = mock дані для тестування, false = реальна DynamoDB
USE_MOCK_DELIVERY=true  # true = виводить у консоль, false = відправляє HTTP запити

# DynamoDB Configuration (для вашого teammate)
AWS_REGION=eu-central-1
DYNAMODB_TABLE_NAME=reviews
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key